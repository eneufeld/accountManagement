<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="org.eclipsesource.accounting.internal.ui.e3.ProjectTurnoverViewPart"
            id="org.eclipsesource.accounting.ui.e3.projectturnover"
            name="Project Turnover"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.emf.ecp.ui.ModelExplorerView">
         <command
               commandId="org.eclipsesource.accounting.ui.e3.command.projectturnover"
               label="Show Project Turnover"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeMenuSelection">
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <instanceof
                           value="org.eclipsesource.accounting.Project">
                     </instanceof>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.eclipsesource.accounting.internal.ui.e3.ProjectTurnoverHandler"
            id="org.eclipsesource.accounting.ui.e3.command.projectturnover"
            name="Show Project Turnover">
      </command>
   </extension>

</plugin>
